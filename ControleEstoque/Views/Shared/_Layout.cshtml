<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Controle de Estoque</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControleEstoque.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Controle de Estoque</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="nav-link text-dark dropdown-toggle" href="#" data-bs-toggle="dropdown">Cadastro </a>
                                <ul class="dropdown-menu">
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Cadastro" asp-action="GrupoProduto">Grupo de produtos</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Cadastro" asp-action="MarcaProduto">Marcas de produtos</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Cadastro" asp-action="LocalProduto">Locais de armazenamento</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Cadastro" asp-action="UnidadeMedida">Unidade de medida</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Cadastro" asp-action="Produto">Produtos</a></li>
                                    <li class="dropdown-divider"></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Cadastro" asp-action="Pais">Paises</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Cadastro" asp-action="Estado">Estados</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Cadastro" asp-action="Cidade">Cidades</a></li>
                                    <li class="dropdown-divider"></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Cadastro" asp-action="Fornecedor">Fornecedores</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Cadastro" asp-action="PerfilUsuario">Perfis de Usuarios</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Cadastro" asp-action="Usuario">Usuarios</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="nav-link text-dark dropdown-toggle" href="#" data-bs-toggle="dropdown">Operações </a>
                                <ul class="dropdown-menu">
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Operacao" asp-action="EntradaEstoque">Entrada de produtos </a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Operacao" asp-action="SaidaEstoque">Saida de produtos</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Operacao" asp-action="LancPerdaProduto">Lancamento de perdas de produto</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Operacao" asp-action="Inventario">Inventario de estoque</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="nav-link text-dark dropdown-toggle" href="#" data-bs-toggle="dropdown">Relatórios </a>
                                <ul class="dropdown-menu">
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Relatorio" asp-action="PosicaoEstoque">Posição do Estoque</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Relatorio" asp-action="Ressuprimento">Ressuprimento</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="nav-link text-dark dropdown-toggle" href="#" data-bs-toggle="dropdown">Gráficos </a>
                                <ul class="dropdown-menu">
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Grafico" asp-action="PerdaMes">Perda por mes</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Grafico" asp-action="EntradaSaidaMes">Entradas vs saidas por mes</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <!-- Login / Logout Button -->
                    <ul class="navbar-nav ml-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            
                            <li class="nav-item">
                                <a class="nav-link  text-dark">
                                    @User.Identity.Name
                                </a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Conta" asp-action="Logout" method="post">
                                    <button type="submit" class="nav-link  text-dark dropdown-item">Sair</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Conta" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Controle de Estoque - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
